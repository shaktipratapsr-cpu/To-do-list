<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Listing</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include('navbar')%>
  <h1>Task List</h1>
  <div class="container">
    <% if (tasks && tasks.length > 0) { %>
      <% tasks.forEach(task => { %>
        <div class="card">
          <h2><%= task.title %></h2>
          <p><%= task.description %></p>
          <small>Added: <%= task.createdAt.toLocaleString() %></small>
        </div>
      <% }) %>
    <% } else { %>
      <p>No tasks found. Add a new task!</p>
    <% } %>
  </div>
</body>
</html>